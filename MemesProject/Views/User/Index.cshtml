@model MemesProject.Models.MemeModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Twoja aktywność</h2>

@*<---- Div do wyśrodkowania*@
<div class="col-lg-2"></div>
@*//Div do wyśrodkowania --->*@

<div class="container col-lg-12">
    <div class="jumbotron col-lg-4">
        <dl class="dl-horizontal">
            <dt>Wyświetl swoje publikowane memy: </dt>
            <dd>@Html.ActionLink("Klik", "ShowMyMemes")</dd>

            <dt>Ile osób łącznie polubiło twoje posty</dt>
            <dd>@ViewBag.SumOfLikes</dd>

            <dt>Ile osób łącznie nie lubi twoich postów </dt>
            <dd>@ViewBag.SumOfMinus</dd>
        </dl>
    </div>
    <div class="jumbotron col-lg-6">
        <dl class="dl-horizontal">
            <dt>Twoje ostatnie komentarze: </dt>
            <dd></dd>

            
        </dl>
    </div>
</div>

<style>
    .responsive {
        width: 100%;
        height: auto;
    }
</style>